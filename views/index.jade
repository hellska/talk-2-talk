extends layout

block content
  h1= title
  p Welcome to #{title}
  p If you are new to the site please register to start blogging
  form(name="register", action="/mydb", method="get")
    input(type="submit", value="register")
  div.loginbox
    p login with your username and password
    form(name="login", action="/login", method="post")
      strong username
      input(type="text", name="user")
      br
      strong password
      input(type="password", name="pass")
      br
      input(type="submit", value="login")


